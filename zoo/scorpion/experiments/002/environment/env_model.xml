<mujoco model='world'>
  <compiler coordinate='local' inertiafromgeom='true'/>

  <option gravity='0 0 -9.81' integrator='RK4' timestep='0.005'/>

  <default>
    <joint type='hinge'  pos='0 0 0' axis='0 1 0' limited='true' damping='0.05' />
    <geom type='capsule' conaffinity='1' contype='1' condim='3'
          friction='.1 .1 .1' rgba='0 .8 .0 1' pos='0 0 0' margin='0.001'/>
    <site type='sphere' rgba='1 1 1 0.5' pos='0 0 0' size='0.0001'/>
    <motor ctrllimited='true' gear='10' />
  </default>

  <asset>
    <texture name='texplane' type='2d' builtin='checker' rgb1='.2 .9 .4' rgb2='.1 .7 .2' width='100' height='100'/>
    <material name='MatPlane' reflectance='0.0' texture='texplane' texrepeat='1 1' texuniform='true'/>
  </asset>

  <visual>
    <quality shadowsize='4096'/>
  </visual>

  <custom>
    <numeric data='0' name='frame_skip'/>
  </custom>

  <size nstack='3000'/>

  <worldbody>
  <light diffuse='.6 .6 .6' pos='0 30 30' dir='0 -1 -1'/>
  <geom name='floor' size='20 20 0.125' type='plane' material='MatPlane'/>
  <body name='world.scorpion' pos='0 0 0'>
  <body name='world.scorpion.cart' pos='0 0 0'>
    <geom type='box' pos='0 0 0.1' size='.5 .5 .1' rgba='.2 .2 .0 1'/>
    <body name='world.scorpion.head'  pos='0 0 0'>
      <joint name='world.scorpion.head.a' axis='0 0 1' range='-90 +90'/>
      <geom type='cylinder' fromto='0 0 .2  0 0 0.25' size='.15' rgba='1.5 1.5 0 1'/>
      <body name='world.scorpion.tentacle' pos='0 0 .2'>
  <geom type='box' pos='0 0 0.1' size='.3 .3 .05' rgba='0.6 0.6 0 1'/>
  <geom type='sphere' pos='0 0 .1' size='0.12'/>
  <body name='world.scorpion.tentacle.s1' pos='0 0 0.17'>
    <joint name='world.scorpion.tentacle.s1.a' range=' -70 +70'/>
    <geom fromto='0 0 0 0 0 .9' size='0.075'/>
    <body name='world.scorpion.tentacle.s2' pos='0 0 .95'>
      <joint name='world.scorpion.tentacle.s2.a' range=' -120 +120'/>
      <geom fromto='0 0 0 0 0 .7' size='0.06'/>
      <body name='world.scorpion.tentacle.s3' pos='0 0 .75'>
        <joint name='world.scorpion.tentacle.s3.a' range=' -150 +150'/>
        <geom fromto='0 0 0 0 0 .5' size='0.05'/>
        <body name='world.scorpion.tentacle.head' pos='0 0 .5'>
          <geom type='cylinder' fromto='0 0 0  0 0 .06' rgba='1.2 1.2 0. 1' size='.06'/>
          <site name='world.scorpion.tentacle.head' pos='0 0 0.06' rgba='.2 .2 1.5 0.5' size='.06'/>
        </body>
      </body>
    </body>
  </body>
</body>


      <body name='world.scorpion.target' pos='0 0 0'>
  <site name='world.scorpion.target.surface' type= 'box' size='2 0.01 1.5' pos='0 0 1.5' rgba='1 1 0 .1'/>
  <body name='world.scorpion.target.coords' pos='0 0 1.5'>
    <joint name='world.scorpion.target.coords.x' type='slide' axis='1 0 0' range='-2 +2' />
    <joint name='world.scorpion.target.coords.z' type='slide' axis='0 0 1' range='-2 +2' />
    <geom type='sphere' conaffinity='0' contype='0' rgba='0. 0. 0. 0.' size='.05' mass='1e-3'/>
    <site name='world.scorpion.target' pos='0 0 0' size='.05' rgba='1.5 1.5 0. 0.9' />
  </body>
</body>

    </body>
  </body>
</body>


  <body name='world.ball' pos='0 0 5'>
  <joint type='free' limited='false' damping='0.1'/>
  <geom type='sphere' conaffinity='1' contype='1' rgba='0.05 1. 3. .4' size='.2' mass='3e-1'/>
</body>

</worldbody>

  
<actuator>
  <motor name='world.scorpion.actuator.1' ctrlrange='-1. +1.' joint='world.scorpion.head.a'/>
</actuator>

<actuator>
  <motor name='world.scorpion.tentacle.actuator.1' ctrlrange='-200 +200' joint='world.scorpion.tentacle.s1.a'/>
  <motor name='world.scorpion.tentacle.actuator.2' ctrlrange='-150 +150' joint='world.scorpion.tentacle.s2.a'/>
  <motor name='world.scorpion.tentacle.actuator.3' ctrlrange=' -50  +50' joint='world.scorpion.tentacle.s3.a'/>
</actuator>




</mujoco>
