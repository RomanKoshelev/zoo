<body name='{agent}' pos='0 0 0'>
  <body name='{agent}.cart' pos='0 0 0'>
    <geom type='box' pos='0 0 0.1' size='.5 .5 .1' rgba='.2 .2 .0 1'/>
    <body name='{agent}.head'  pos='0 0 0'>
      <joint name='{agent}.head.a' axis='0 0 1' range='-90 +90'/>
      <geom type='cylinder' fromto='0 0 .2  0 0 0.25' size='.15' rgba='1.5 1.5 0 1'/>
      {{tentacle}}
      {{target}}
    </body>
  </body>
</body>

<actuator>
  <motor name='{agent}.actuator.head' ctrlrange='-10 +10' joint='{agent}.head.a'/>
  <position name='{agent}.actuator.target.x' ctrlrange='-2 +2' joint='{agent}.target.coords.x'/>
  <position name='{agent}.actuator.target.z' ctrlrange='-1 +2' joint='{agent}.target.coords.z'/>
</actuator>
