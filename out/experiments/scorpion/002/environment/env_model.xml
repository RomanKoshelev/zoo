<mujoco model="world">
  <compiler coordinate="local" inertiafromgeom="true"/>

  <option gravity="0 0 -9.81" integrator="RK4" timestep="0.005"/>

  <default>
    <joint type="hinge"  pos="0 0 0" axis="0 1 0" limited='true' damping="0.05" />
    <geom type="capsule" conaffinity="1" contype="1" condim='3'
          friction=".1 .1 .1" rgba="0 .8 .0 1" pos='0 0 0' margin="0.001"/>
    <site type="sphere" rgba="1 1 1 0.5" pos="0 0 0" size="0.0001"/>
    <motor ctrllimited='true' gear="10" />
  </default>

  <asset>
    <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .9 .4" rgb2=".1 .7 .2" width="100" height="100"/>
    <material name='MatPlane' reflectance='0.0' texture="texplane" texrepeat="1 1" texuniform="true"/>
  </asset>

  <visual>
    <quality shadowsize="4096"/>
  </visual>

  <custom>
    <numeric data="0" name="frame_skip"/>
  </custom>

  <size nstack="3000"/>

  <worldbody>
    <light diffuse=".5 .5 .5" pos="0 30 30" dir="0 -1 -1"/>
    <geom name='floor' size='10 10 0.125' type='plane' material="MatPlane"/>
    <body name="scorpion" pos="0 0 0">
  <body name="scorpion.cart" pos="0 0 0">
    <geom type='box' pos="0 0 0.1" size='.5 .5 .1' rgba=".2 .2 .0 1"/>
    <body name="scorpion.cart.head"  pos="0 0 0">
      <joint name="scorpion.cart.head.a" axis="0 0 1" range='-90 +90'/>
      <geom type='cylinder' fromto='0 0 .2  0 0 0.25' size='.15' rgba="1.5 1.5 0 1"/>
      <body name="tentacle" pos="0 0 .2">
  <geom type='box' pos="0 0 0.1" size='.3 .3 .05' rgba="0.6 0.6 0 1"/>
  <geom type='sphere' pos="0 0 .1" size="0.12"/>
  <body name="tentacle.s1" pos="0 0 0.17">
    <joint name="tentacle.s1.a" range=' -70 +70'/>
    <geom fromto="0 0 0 0 0 .9" size="0.075"/>
    <body name="tentacle.s2" pos="0 0 .95">
      <joint name="tentacle.s2.a" range=' -120 +120'/>
      <geom fromto="0 0 0 0 0 .7" size="0.06"/>
      <body name="tentacle.s3" pos="0 0 .75">
        <joint name="tentacle.s3.a" range=' -150 +150'/>
        <geom fromto="0 0 0 0 0 .5" size="0.05"/>
        <body name="tentacle.head" pos="0 0 .5">
          <geom type='cylinder' fromto='0 0 0  0 0 .06' rgba="1.2 1.2 0. 1" size='.06'/>
          <site name="tentacle.head" pos="0 0 0.06" rgba=".2 .2 1.5 0.5" size='.06'/>
        </body>
      </body>
    </body>
  </body>
</body>


      <body name="target" pos="0 0 1.5">
  <joint name="target.x" type="slide" axis="1 0 0" range="-3 +3" damping="0" frictionloss="1e10" frictional="true" />
  <joint name="target.z" type="slide" axis="0 0 1" range="-1 +1" damping="0" frictionloss="1e10" frictional="true" />
  <geom type="sphere" conaffinity="0" contype="0" rgba="1. 0. 0. 1." size=".05" mass="2e3"/>
  <site name="tentacle.target" pos="0 0 0.025"/>
</body>

    </body>
  </body>
</body>


  </worldbody>

  <actuator>
  <motor name="scorpion.cart.m.1" ctrlrange="-1. +1." joint="scorpion.cart.head.a"/>
</actuator>

<actuator>
  <motor name="tentacle.m.1" ctrlrange="-200 +200" joint="tentacle.s1.a"/>
  <motor name="tentacle.m.2" ctrlrange="-150 +150" joint="tentacle.s1.a"/>
  <motor name="tentacle.m.3" ctrlrange=" -50  +50" joint="tentacle.s3.a"/>
</actuator>



</mujoco>
