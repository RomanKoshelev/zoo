<mujoco model="world">
  <compiler coordinate="local" inertiafromgeom="true"/>

  <option gravity="0 0 -9.81" integrator="RK4" timestep="0.005"/>

  <default>
    <joint type="hinge"  pos="0 0 0" axis="0 1 0" limited='true' damping="0.05" />
    <geom type="capsule" conaffinity="1" contype="1" condim='3'
          friction=".1 .1 .1" rgba="0 .8 .0 1" pos='0 0 0' margin="0.001"/>
    <site type="sphere" rgba="1 1 1 0.5" pos="0 0 0" size="0.0001"/>
    <motor ctrllimited='true' gear="10" />
  </default>


  <asset>
    <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .9 .4" rgb2=".1 .7 .2" width="100" height="100"/>
    <material name='MatPlane' reflectance='0.0' texture="texplane" texrepeat="1 1" texuniform="true"/>
  </asset>

  <visual>
    <quality shadowsize="4096"/>
  </visual>

  <custom>
    <numeric data="0" name="frame_skip"/>
  </custom>

  <size nstack="3000"/>

  <!-- world -->
  <worldbody>
    <!-- sun -->
    <light diffuse=".5 .5 .5" pos="0 30 30" dir="0 -1 -1"/>

    <!-- ground -->
    <geom name='floor' size='10 10 0.125' type='plane' material="MatPlane"/>

    <!-- scorpion -->
    <body name="scorpion" pos="0 0 0">

  <!-- cart -->
  <body name="cart" pos="0 0 0">
    <geom type='box' pos="0 0 0.1" size='.5 .5 .1' rgba=".2 .2 .0 1"/>
    <body name="cart.head"  pos="0 0 0">
      <joint name="cart.head.a" axis="0 0 1" range='-45 +45'/>
      <geom type='cylinder' fromto='0 0 .2  0 0 0.25' size='.15' rgba="1 1 0 1"/>
      <body name="tentacle" pos="0 0 .25">
  <!-- base -->
  <geom type='box' pos="0 0 0.1" size='.4 .4 .1' rgba="0.6 0.6 0 1"/>
  <geom fromto="0 0 .1 0 0 .15" size="0.1"/>
  <!-- segment 1 -->
  <body name="tentacle.segment_1" pos="0 0 0.25">
    <joint name="tentacle.hinge_1" range=' -70 +70'/>
    <geom fromto="0 0 0 0 0 .9" size="0.075"/>
    <!-- segment 2 -->
    <body name="tentacle.segment_2" pos="0 0 .95">
      <joint name="tentacle.hinge_2" range=' -120 +120'/>
      <geom fromto="0 0 0 0 0 .7" size="0.06"/>
      <!-- segment 3 -->
      <body name="tentacle.segment_3" pos="0 0 .75">
        <joint name="tentacle.hinge_3" range=' -150 +150'/>
        <geom fromto="0 0 0 0 0 .5" size="0.05"/>
        <!-- head -->
        <body name="tentacle.head" pos="0 0 .5">
          <geom type='cylinder' fromto='0 0 0  0 0 .06' rgba="1.2 1.2 0. 1" size='.06'/>
          <site name="tentacle.head" pos="0 0 0.06" rgba=".2 .2 1.5 0.5" size='.06'/>
        </body> <!-- head -->
      </body> <!-- segment 3 -->
    </body> <!-- segment 2 -->
  </body> <!-- segment 1 -->
</body> <!-- tentacle -->


    </body>
  </body>
</body>



    <!-- Target -->
    <body name="tentacle.target" pos="0 3 1.5">
      <joint name="target_x" type="slide" axis="1 0 0" range="-3 +3" damping="0" frictionloss="1e10" frictional="true" />
      <joint name="target_z" type="slide" axis="0 0 1" range="-1 +1" damping="0" frictionloss="1e10" frictional="true" />

      <geom type="sphere" conaffinity="0" contype="0" rgba="1. 0. 0. 1." size=".05" mass="2e3"/>
      <site name="tentacle.target" pos="0 0 0.025"/>
    </body>

  </worldbody>

  <actuator>
  <motor name="cart.head.motor.1" ctrlrange="-10. +10." joint="cart.head.a"/>
</actuator>

<actuator>
  <motor name="tentacle.act.1" ctrlrange="-200 +200" joint="tentacle.hinge_1"/>
  <motor name="tentacle.act.2" ctrlrange="-150 +150" joint="tentacle.hinge_2"/>
  <motor name="tentacle.act.3" ctrlrange=" -50  +50" joint="tentacle.hinge_3"/>
</actuator>


</mujoco>
