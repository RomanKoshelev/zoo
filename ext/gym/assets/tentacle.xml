<mujoco model="cartpole">
  <compiler coordinate="local" inertiafromgeom="true"/>

  <option gravity="1e-5 0 -9.81" integrator="RK4" timestep="0.01"/>

  <default>
    <joint damping="0.05"/>
    <geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
    <site type="sphere" rgba=".9 0 0 .5" size="0.05"/>
  </default>


  <!-- materials etc. -->
  <asset>
    <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .9 .4" rgb2=".1 0.7 0.2" width="100"
               height="100"/>
    <material name='MatPlane' reflectance='0.015' texture="texplane" texrepeat="1 1" texuniform="true"/>
  </asset>

  <visual>
    <quality shadowsize="2048"/>
  </visual>

  <custom>
    <numeric data="0" name="frame_skip"/>
  </custom>

  <size nstack="3000"/>

  <!-- world -->
  <worldbody>
    <!-- sun -->
    <light diffuse=".5 .5 .5" pos="0 30 30" dir="0 -1 -1"/>

    <!-- ground -->
    <geom name='floor' pos='0 0 0' size='10 10 0.125' type='plane' material="MatPlane" condim='3'/>

    <!-- tentacle -->
    <body name="tentacle" pos="0 0 0">
      <geom name="tentacle" pos="0 0 0" quat="0.707 0 0.707 0" size="0.1 0.1" type="capsule"/>
      <body name="pole" pos="0 0 0">
        <joint axis="0 1 0" limited='true' range=' -50  50' name="hinge" pos="0 0 0" type="hinge"/>
        <geom fromto="0 0 0 0 0 0.6" name="cpole" rgba="0 1.8 0.0 1" size="0.045 0.3" type="capsule"/>
        <body name="pole2" pos="0 0 0.6">
          <joint axis="0 1 0" limited='true' range=' -50  50' name="hinge2" pos="0 0 0" type="hinge"/>
          <geom fromto="0 0 0 0 0 0.6" name="cpole2" rgba="0 0.0 1.9 1" size="0.045 0.3" type="capsule"/>
          <site name="tip" pos="0 0 .6" size="0.01 0.01"/>
        </body>
      </body>
    </body>

  </worldbody>

  <actuator>
    <motor ctrllimited="true" ctrlrange="-7 7" gear="10" joint="hinge" name="hinge"/>
    <motor ctrllimited="true" ctrlrange="-3 3" gear="10" joint="hinge2" name="hinge2"/>
  </actuator>

</mujoco>
