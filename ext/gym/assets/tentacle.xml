<mujoco model="tentacle">
  <compiler coordinate="local" inertiafromgeom="true"/>

  <option gravity="1e-5 0 -9.81" integrator="RK4" timestep="0.01"/>

  <default>
    <joint type="hinge"  pos="0 0 0" axis="0 1 0" limited='true' damping="0.05" />
    <geom type="capsule" conaffinity="1" contype="1" condim='3' friction=".1 .1 .1" rgba="0 .8 .0 1" pos='0 0 0' />
    <site type="sphere" rgba=".2 .2 1.5 1" size="0.001"/>
    <motor ctrllimited='true' gear="10" />
  </default>


  <!-- materials etc. -->
  <asset>
    <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .9 .4" rgb2=".1 .7 .2" width="100" height="100"/>
    <material name='MatPlane' reflectance='0.' texture="texplane" texrepeat="1 1" texuniform="true"/>
  </asset>

  <visual>
    <quality shadowsize="4096"/>
  </visual>

  <custom>
    <numeric data="0" name="frame_skip"/>
  </custom>

  <size nstack="3000"/>

  <!-- world -->
  <worldbody>
    <!-- sun -->
    <light diffuse=".5 .5 .5" pos="0 30 30" dir="0 -1 -1"/>

    <!-- ground -->
    <geom name='floor' size='10 10 0.125' type='plane' material="MatPlane"/>

    <!-- agent -->
    <body name="agent" pos="0 3 0">

      <!-- base -->
      <geom name='base' type='cylinder' fromto='0 0 0  0 0 .15' size='.5' rgba=".4 .4 .0 1"/>
      <geom fromto="0 0 .1 0 0 .15" size="0.1"/>

      <!-- segment 1 -->
      <body name="segment_1" pos="0 0 0.25">
        <joint name="hinge_1" range=' -70 +70'/>
        <geom fromto="0 0 0 0 0 .9" size="0.075"/>

        <!-- segment 2 -->
        <body name="segment_2" pos="0 0 .95">
          <joint name="hinge_2" range=' -120 +120'/>
          <geom fromto="0 0 0 0 0 .7" size="0.06"/>

          <!-- segment 3 -->
          <body name="segment_3" pos="0 0 .75">
            <joint name="hinge_3" range=' -150 +150'/>
            <geom fromto="0 0 0 0 0 .5" size="0.05"/>

            <!-- head -->
            <body name="head" pos="0 0 .57">
              <geom type='cylinder' fromto='0 0 0  0 0 .02' rgba="1.2 1.2 0. 1" size='.25'/>
              <site name="head" pos="0 0 0.01" size="0.05"/>
            </body>
          </body>
        </body>
      </body>
    </body>

  </worldbody>

  <actuator>
    <motor name="hinge_1" ctrlrange="-200 +200" joint="hinge_1"/>
    <motor name="hinge_2" ctrlrange="-100 +100" joint="hinge_2"/>
    <motor name="hinge_3" ctrlrange=" -50  +50" joint="hinge_3"/>
  </actuator>

</mujoco>
